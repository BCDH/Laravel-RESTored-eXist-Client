{
    "name": "bcdh/exist-db-rest-client",
    "type": "library",
    "description": "A Laravel client for querying and transforming results from eXist-db via REST API",
    "keywords": [
        "eXist-db",
        "xquery",
        "xslt",
        "php",
        "laravel",
        "rest"
    ],
    "homepage": "https://github.com/BCDH/Laravel-RESTored-eXist-Client",
    "license": "GPL-2.0",
    "require": {
        "php" : "~5.5|~7.0",
        "illuminate/support": "5.*",
        "guzzlehttp/guzzle": "^6.2",
        "sabre/xml": "1.4.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "BCDH\\ExistDbRestClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BCDH\\ExistDbRestClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --verbose tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "stable"
}
